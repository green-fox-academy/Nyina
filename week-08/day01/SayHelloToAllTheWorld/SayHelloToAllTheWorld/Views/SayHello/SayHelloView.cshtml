@model SayHelloToAllTheWorld.Models.SayHelloModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Say Hello To The World</title>
</head>
<body>
    @for (int i = 0; i < Model.Content.Count(); i++)
    {
        var random = new Random();
        <span style="color: rgb(@random.Next(0, 256), 
                                @random.Next(0, 256), 
                                @random.Next(0, 256)); 
                     font-size: @random.Next(5, 35)px;">@Model.Content[i]</span>
    }
</body>
</html>
