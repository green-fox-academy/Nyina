@model List<ListingToDos.Models.ToDo>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo CRUD App</title>
</head>
<body>
    <form action="/todo/add" method="post">
        <p>Title:</p>
        <input type="text" name="Title" value="">
        <p>Whose task is it?:</p>
        @*<input type="text" name="Name" value="">*@
        <select type="text" name="User">
        <option value="Nyina">Nyina</option>
        <option value="cat">Cat</option>
        <option value="dog">Dog</option>
        <option value="Ádám">Ádám</option>
    </select>
        <br />
        <br />
        <p>IsDone</p>
        <select type="text" name="IsDone">
        <option value=true>Is Done</option>
        <option value=false>Is Not Done</option>
        </select>
        <p>IsUrgent</p>
        <select type="text" name="IsUrgent">
        <option value=true>Important</option>
        <option value=false>Not Important</option>
        </select>
        <input type="submit" value="Add new list element">
    </form>

</body>
</html>